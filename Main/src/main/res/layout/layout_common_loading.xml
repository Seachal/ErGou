<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_common_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_loading_bg"
    android:clickable="true"
    android:visibility="gone">


    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/bg_shape_common_loading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/pull_to_refresh_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_0"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/anim_ergou_pull_refresh_blackbg"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:paddingTop="@dimen/dp_3"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,70:148"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>