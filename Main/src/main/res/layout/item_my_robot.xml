<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingTop="@dimen/dp_15">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_robot_avatar"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_robot_place_holder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:riv_corner_radius="@dimen/dp_4" />

    <TextView
        android:id="@+id/tv_robot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="AI返利机器人"
        android:textColor="@color/color_525252"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@id/iv_robot_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_robot_avatar" />

    <TextView
        android:id="@+id/tv_robot_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:text="微信号：jiqiren001"
        android:textColor="@color/color_525252"
        android:textSize="@dimen/normal_font_size_small"
        app:layout_constraintLeft_toLeftOf="@id/tv_robot_name"
        app:layout_constraintTop_toBottomOf="@id/tv_robot_name" />

    <TextView
        android:id="@+id/tv_robot_id_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/robot_copy_id"
        android:textColor="@color/color_7f7f7f"
        android:textSize="@dimen/normal_font_size_small"
        app:layout_constraintBottom_toBottomOf="@id/iv_robot_avatar"
        app:layout_constraintLeft_toLeftOf="@id/tv_robot_name"
        app:layout_constraintTop_toBottomOf="@id/tv_robot_id" />

    <ImageView
        android:id="@+id/iv_robot_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/shape_on_line_circle"
        app:layout_constraintBottom_toBottomOf="@id/tv_robot_status"
        app:layout_constraintRight_toLeftOf="@+id/tv_robot_status"
        app:layout_constraintTop_toTopOf="@id/tv_robot_status" />

    <TextView
        android:id="@+id/tv_robot_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线"
        android:textSize="@dimen/sp_13"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_robot_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_on_line_rect"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:text="赚取补贴"
        android:textColor="@color/color_on_line_text"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@id/tv_robot_id_copy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_robot_id_copy" />
</android.support.constraint.ConstraintLayout>