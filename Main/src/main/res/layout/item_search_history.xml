<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20">

    <ImageView
        android:id="@+id/iv_search_history_time"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:src="@drawable/ic_time"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_search_history_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_search_history_title" />

    <TextView
        android:id="@+id/tv_search_history_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:text="测试数据"
        app:layout_constraintLeft_toRightOf="@id/iv_search_history_time"
        app:layout_constraintRight_toLeftOf="@+id/iv_search_history_delete" />

    <ImageView
        android:id="@+id/iv_search_history_delete"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:padding="@dimen/dp_6"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@id/tv_search_history_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_search_history_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.1"
        android:background="@color/color_divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_history_title" />

</android.support.constraint.ConstraintLayout>