<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_video_course_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/home_img_teach_bg"
        android:paddingBottom="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_12"
        app:layout_constraintDimensionRatio="w,219:1071"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_img_teach_money" />

            <TextView
                android:id="@+id/tv_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="简单3步"
                android:textStyle="bold"
                android:textColor="@color/color_303030"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省钱赚钱"
                android:textStyle="bold"
                android:textColor="@color/color_main"
                android:textSize="@dimen/sp_17" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/video_course_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/bg_shape_border_fillet"
                android:paddingBottom="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4">

                <TextView
                    android:id="@+id/tv_video_course_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_6"
                    android:drawableRight="@drawable/home_icon_teach_go"
                    android:text="查看教程"
                    android:textStyle="bold"
                    android:textColor="@color/color_main"
                    android:textSize="@dimen/sp_12" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_txt3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="1.复制手淘商品标题  2.返回二购  3.领券下单赚佣金"
            android:textColor="@color/color_757575"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_top" />

        <ImageView
            android:id="@+id/iv_video_course_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_6"
            android:src="@drawable/home_icon_teach_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>