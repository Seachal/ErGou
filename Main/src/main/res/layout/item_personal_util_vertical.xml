<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_personal_util"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@drawable/ic_mine_robot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_personal_util"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/util_my_order"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_303030"
        app:layout_constraintLeft_toLeftOf="@id/iv_personal_util"
        app:layout_constraintRight_toRightOf="@id/iv_personal_util"
        app:layout_constraintTop_toBottomOf="@id/iv_personal_util" />
</android.support.constraint.ConstraintLayout>