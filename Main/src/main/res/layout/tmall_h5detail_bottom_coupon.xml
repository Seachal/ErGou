<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_coupon"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_64"
    android:clickable="true"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/bg_shape_theme_yellow"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="分享"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:id="@+id/tv_share_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="预赚¥0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_coupon"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/bg_shape_theme_blue"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="领券购买"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:id="@+id/tv_coupon_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="预省¥0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
